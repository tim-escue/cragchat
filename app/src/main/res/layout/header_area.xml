<RelativeLayout android:id="@+id/area_information_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_scrollFlags="scroll|snap"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/route_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/sixteen_dp"
        android:layout_alignParentStart="true"
        android:contentDescription="Route image"
        android:src="@drawable/area_mountain" />

    <TextView
        android:id="@+id/num_routes_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/route_image"
        android:layout_alignTop="@id/route_image"
        android:layout_marginEnd="@dimen/sixteen_dp"
        android:text="@string/routes"
        style="@style/TextLabel"/>

    <TextView
        android:id="@+id/num_route_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/route_image"
        android:layout_below="@id/num_routes_label"
        style="@style/TextValue" />

    <TextView
        android:id="@+id/num_areas_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/num_routes_label"
        android:layout_alignTop="@id/route_image"
        android:text="Areas"
        style="@style/TextLabel"/>

    <TextView
        android:id="@+id/num_area_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/num_areas_label"
        android:layout_below="@id/num_routes_label"
        style="@style/TextValue" />

</RelativeLayout>
<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:id="@+id/area_information_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed">

            <ImageView
                android:id="@+id/route_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="@dimen/sixteen_dp"
                android:layout_alignParentStart="true"
                android:contentDescription="Route image"
                android:src="@drawable/basalt_default" />

            <LinearLayout
                android:id="@+id/route_yds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/route_image"
                android:layout_alignTop="@+id/route_image"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/yds_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yds_label"
                    style="@style/TextLabel" />

                <TextView
                    android:id="@+id/yds_scale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    style="@style/TextValue" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/route_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/route_yds"
                android:layout_alignTop="@+id/route_image"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/stars_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stars"
                    style="@style/TextLabel" />

                <TextView
                    android:id="@+id/stars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    style="@style/TextValue" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/route_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/route_stars"
                android:layout_marginStart="16dp"
                android:layout_alignTop="@+id/route_image"
                android:orientation="vertical"
                android:paddingBottom="0dp">

                <TextView
                    android:id="@+id/type_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/route_type"
                    style="@style/TextLabel" />

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    style="@style/TextValue" />
            </LinearLayout>

        </RelativeLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="?attr/actionBarSize"
            app:tabContentStart="@dimen/sixteen_dp"
            app:tabMode="scrollable" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/accent"
        android:src="@drawable/ic_add_white_24dp"
        android:layout_gravity="bottom|end"
        app:borderWidth="0dp" />

</android.support.design.widget.CoordinatorLayout>

</merge>

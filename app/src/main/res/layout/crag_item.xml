<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/eight_dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/crag_icon"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ozone3" />

        <TextView
            android:id="@+id/crag_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/crag_icon"
            android:layout_alignStart="@id/crag_icon"
            android:layout_marginBottom="@dimen/eight_dp"
            android:layout_marginStart="@dimen/sixteen_dp"
            android:textColor="@color/white"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/routes_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/crag_icon"
            android:layout_marginEnd="@dimen/sixteen_dp"
            android:layout_marginStart="@dimen/sixteen_dp"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:text="@string/routes"
            android:textColor="@color/secondary_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/number_routes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/routes_label"
            android:layout_below="@id/routes_label"
            android:layout_marginBottom="@dimen/sixteen_dp"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/areas_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/routes_label"
            android:layout_marginEnd="@dimen/sixteen_dp"
            android:layout_toEndOf="@id/routes_label"
            android:text="@string/areas"
            android:textColor="@color/secondary_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/number_areas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/areas_label"
            android:layout_below="@id/areas_label"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/comments_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/routes_label"
            android:layout_toEndOf="@id/areas_label"
            android:text="@string/title_images"
            android:textColor="@color/secondary_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/number_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/comments_label"
            android:layout_below="@id/comments_label"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
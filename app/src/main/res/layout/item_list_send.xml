<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_light_background"
    android:orientation="vertical"
    android:paddingTop="@dimen/eight_dp"
    android:paddingBottom="@dimen/eight_dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_check_black_24dp"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:layout_marginEnd="@dimen/sixteen_dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/item_send_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/icon"
        android:layout_alignTop="@id/icon" />

    <TextView
        android:id="@+id/item_send_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_send_username"
        android:layout_alignStart="@id/item_send_username"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_send_pitches"
        android:layout_width="wrap_content"
        android:layout_below="@id/item_send_date"
        android:layout_alignStart="@id/item_send_username"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_send_attempts"
        android:layout_width="wrap_content"
        android:layout_below="@id/item_send_pitches"
        android:layout_alignStart="@id/item_send_username"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_send_style"
        android:layout_width="wrap_content"
        android:layout_below="@id/item_send_attempts"
        android:layout_alignStart="@id/item_send_username"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_send_send_type"
        android:layout_below="@id/item_send_style"
        android:layout_alignStart="@id/item_send_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
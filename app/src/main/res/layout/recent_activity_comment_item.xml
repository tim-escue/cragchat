<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_comment"
    android:layout_width="match_parent"
    android:background="@color/cardview_light_background"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/eight_dp"
    android:paddingBottom="@dimen/eight_dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/sixteen_dp"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:src="@drawable/ic_comment_black_24dp" />

    <RelativeLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/icon"
        android:layout_toEndOf="@+id/icon">

        <TextView
            android:id="@+id/comment_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/comment_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/eight_dp"
            android:layout_alignBottom="@id/comment_author"
            android:layout_toEndOf="@id/comment_author" />

        <TextView
            android:id="@+id/comment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/comment_author"
            android:layout_below="@id/comment_author"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/comment_date"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/comment_date"
            android:text="0 points"
            android:textSize="12sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/comment_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/content_container"
        android:layout_below="@id/content_container"
        android:layout_marginEnd="@dimen/eight_dp"
        android:layout_marginTop="@dimen/eight_dp"
        android:ellipsize="end"
        android:maxLines="5"
        android:textSize="12sp" />

</RelativeLayout>
